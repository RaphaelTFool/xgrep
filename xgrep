grep_regex_mk=".*\(Makefile\|\.mk\|\.mak\|\.bb\|CMakeLists\.txt\|\.cmake\)"

function xgrepmk()
{
	_xgrep 0 "mk" "$@"
}

function xgrepimk()
{
	_xgrep 1 "mk" "$@"
}

